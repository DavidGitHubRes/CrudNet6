@model CrudNet6.Models.Clientes
@{
    ViewData["Title"] = "Modificar";
}

<h1 class="text-center">Crud básico </h1>
<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Modificar nuevos clientes</strong></h3>
            </div>
            <div class="card-body">
                <form asp-action="Editar">
                    <input type="hidden" form="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Escribe aqui el nombre del cliente" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="Escribe aqui el Tel del cliente" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>

                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success">Actulizar Cliente</button>
                        <a class="btn btn-link" asp-controller="Home" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
