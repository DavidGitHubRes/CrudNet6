@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SinInManager

<ul style="list-style: none;" class="navbar-var">
    @{
        // preguntamos si el usuario esta logueado.
            // lo saludamos con un hola
    }

    @if (SinInManager.IsSignedIn(User))
    {


        <li class="nav-item text-secondary alert alert-light" role="alert">
            <span class="nav-link text-secondary btn btn-info">
                Hola @User.Identity.Name
            </span>
            <form class="form-inline" asp-action="Logout" asp-controller="Usuarios">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Registro">Registro</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Usuarios" asp-action="Login">Login</a>
        </li>
    }

</ul>